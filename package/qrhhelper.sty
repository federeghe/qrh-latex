% http://tex.stackexchange.com/a/68296
% A new command to create invisible section (used
% to create the TOC.
%

\newcommand\invisiblepart@QRH[1]{
	\refstepcounter{part}
	\addcontentsline{toc}{part}{\protect\numberline{\thepart}#1}
	\sectionmark{#1}
}

\newcommand\invisiblesection@QRH[1]{
	\refstepcounter{section}
	\addcontentsline{toc}{section}{\protect\numberline{\thesection}#1}
	\sectionmark{#1}
}

