% HEADING
\newcommand{\headingcl}[4]{
	\vspace*{0.3cm}
    \begin{center}

        \begin{tabular}{|p{1.3cm}|p{6.5cm}|p{1.7cm}|p{1.5cm}|}
          \hline
          
          \multicolumn{1}{|c|}{\multirow{2}{*}{\large #1}} & 
          \multicolumn{1}{|c|}{\multirow{2}{*}{\LARGE #2}} & 
          REV. #3 &
          \multicolumn{1}{|c|}{\multirow{2}{*}{\LARGE #4.\ifnum\thepage<10 0\fi\thepage}}
          \\
          & & \small\mmddyyyydate\today & \\
          
          \hline
        \end{tabular}
	\end{center}
    \vspace*{0.15cm}
    
}

% BODY
\newcommand{\bodycl}[2] {

  \begin{center}
	\renewcommand{\arraystretch}{1.5}
	\begin{tabular}{|p{12cm}|}
    	\hline
    	\multicolumn{1}{|c|}{
        	\cellcolor{black!100}\textcolor{white}{\Large #1}
        } \\ \hline
       
        #2\\
        
        \hline
    \end{tabular}
 
  \end{center}

}

% SINGLE ITEM
\newcommand{\itemcl}[2] {
